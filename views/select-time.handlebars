<h1>Horários Disponíveis para {{date}}</h1>

<ul>
    {{#each availableSlots}}
        <li>{{this}}</li>
    {{/each}}
</ul>

<!-- Aqui você pode adicionar um formulário para confirmar o agendamento -->
<form action="/agendar" method="POST">
    <input type="hidden" name="professionalName" value="{{professionalName}}">
    <input type="hidden" name="date" value="{{date}}">
    <label for="time">Escolha o horário:</label>
    <select name="time" id="time">
        {{#each availableSlots}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <button type="submit">Agendar</button>
</form>
